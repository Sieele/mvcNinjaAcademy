@model mvcAppNinjaDemo.Models.Ninja

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ninja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NinjaId" />

            <div class="form-group">
                <label class="control-label">Imagem Atual do Ninja</label>
                <img src="@Model.NinjaImagePath" alt="Imagem do Ninja" width="200" /> <!-- width="200" é opcional, ajuste conforme necessário -->
            </div>


            <div class="form-group">
                <label asp-for="ClanId" class="control-label"></label>
                @Html.DropDownList("ClanId", null, "Selecione um Clan", new { @class = "form-control" })
                <span asp-validation-for="ClanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jutsu" class="control-label"></label>
                <input asp-for="Jutsu" class="form-control" />
                <span asp-validation-for="Jutsu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IsAlive" class="control-label">Status</label>
                <select asp-for="IsAlive" class="form-control">
                    <option value="true">Vivo</option>
                    <option value="false">Morto</option>
                </select>
                <span asp-validation-for="IsAlive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Information" class="control-label"></label>
                <input asp-for="Information" class="form-control" />
                <span asp-validation-for="Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.Teams"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <div class="form-group row mt-4">
                <div class="col-md-12">
                    <label for="NinjaImage" class="control-label">Upload Image</label>
                    <input type="file" id="NinjaImage" name="NinjaImage" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
